        <TextBlock x:Name="pageMessage" Text="Message" Height="200" Margin="10,145,10,463" Foreground="Black" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" />
        <TextBlock x:Name="pageResult" Text="" Height="19.951171875" Margin="10,336,10,284" Foreground="Black" HorizontalAlignment="Center" />
